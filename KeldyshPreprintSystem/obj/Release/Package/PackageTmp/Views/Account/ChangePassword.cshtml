@{
    ViewBag.Title = "Страница задания нового пароля";
}

<div style="text-align: center; width: 100%;">
    <div id="changePasswordField" style="margin: 0 auto; margin-top: 10%; width: 50%; min-width: 500px;" class="centerDiv">
        <h2>Ввод нового пароля</h2>
        @using (Html.BeginForm(null, null, null, FormMethod.Post))
        {
            <input type="hidden" id="token" name="token" value="@ViewBag.Token") />
            <table>
                <tr>
                    <td>@Html.Label("Введите новый пароль:")
                    </td>
                    <td>@Html.Password("password")
                    </td>
                </tr>
            </table>
            <br />
        }
    </div>
</div>
